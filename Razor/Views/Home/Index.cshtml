@using Razor.Models;
@using System.Globalization;

@model Product[]

@{
    ViewBag.Title = "Product Name";
}

<table>
    <thead>
        <tr><th>Name</th><th>Price</th></tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price.ToString("C2", CultureInfo.GetCultureInfo("en-GB"))</td>
            </tr>
        }
    </tbody>
</table>